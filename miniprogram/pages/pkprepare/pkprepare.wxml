<!--miniprogram/pages/pkprepare/pkprepare.wxml-->

<view class="index">
  <view class="index2">
    <view class="left">
      <image class="leftavatar" src="{{leftdata.avatarUrl}}"></image>
      <text class="lefttext">{{leftdata.nickName}}</text>
    </view>
    <view class="right">
      <image class="rightavatar" src="{{rightdata.avatarUrl}}"></image>
      <text class="righttext">{{rightdata.nickName}}</text>
    </view>
  </view>
  <view class="button">
    <button hidden="{{sbuttonhide}}" open-type="share">分享给好友</button>
    <button hidden="{{pbuttonishide}}" bindtap="getUserProfile">准备</button>
    <button hidden="{{ownerbegin}}" bindtap="beginpk">开始PK</button>      
  </view>
</view>
<view class="back">
  <view class="blue"></view>
  <view class="pink"></view>  
</view>

