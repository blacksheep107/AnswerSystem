/* miniprogram/pages/pkprepare/pkprepare.wxss */
.index{
  display: flex;
  flex-direction: column;
}
.index2{
  display: flex;
  flex-direction: row;
  margin-top: 100rpx;
}
.leftavatar{
  border-radius: 50%;
  height: 120rpx;
  width: 120rpx;
  /* margin-left: 100rpx;
  margin-top: 200rpx; */
}
.rightavatar{
  border-radius: 50%;
  height: 120rpx;
  width: 120rpx;
  /* margin-right: 100rpx;
  margin-top: 200rpx; */
}
.left{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-left: 100rpx;
  /* padding-left: 100rpx;
  padding-top: 200rpx; */
  color: darkslategray;
  font-size: 30rpx;
  font-weight: 300;
}
.right{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-right: 100rpx;
  margin-left: auto;
  /* padding-right: 100rpx;
  padding-top: 200rpx; */
  color: darkslategray;
  font-size: 30rpx;
  font-weight: 300;
}
.back{
  z-index: -1000;
  position: absolute;
}
.blue{
  background-color: #78c4d4;
  width: 50%;
  height: -webkit-fill-available;
  position: fixed;
}
.allblue{
  width: 100%;
  height: -webkit-fill-available;
  position: fixed;
  background-image: linear-gradient(#78c4d4, #9198e5);
}
.pink{
  background-color: #f2b4b4;
  width: 50%;
  height: -webkit-fill-available;
  position: fixed;
  right: 0;
}
.button{
  position: absolute;
  z-index: 999;
  top: 500rpx;
  left: 0;
  right: 0;
}
button{
  background: cadetblue;
  color: white;
}
text{
  margin-top: 20rpx;
  font-size: large;
}