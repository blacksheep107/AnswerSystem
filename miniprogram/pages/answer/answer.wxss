/* miniprogram/pages/answer/answer.wxss */
page{
  background-color: #d8e3e7;
}
button{
  margin: 0;
  padding: 0;
}
.index{
  display: flex;
  flex-direction: column;
}
.buttonview{
  margin-left: auto;
  margin-bottom: 20rpx;
  padding-right: 28rpx;
}
.button{
  border-radius: 12rpx;
  background: #a0937d;
  color: white;
  width: 200rpx;
  padding: 16rpx;
  max-width: 200rpx;
  /* min-width: fit-content; */
  float: right;
  padding: 16rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
}
.card{
  display: flex;
  flex-direction: column;
  border-radius: 12rpx;
  margin: 30rpx;
  padding: 30rpx;
  background: #f0f0f0;
  font-size: large;
  box-shadow: 4rpx 6rpx 34rpx #c0c0c0;
  word-break: break-all;
}
.line{
  height: 1px;
  background-color: #c0c0c0;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.group{
  display: flex;
  flex-direction: column;
}
.label{
  margin: 20rpx;
  background-color: #dddddd;
  border-radius: 16rpx;
  padding: 20rpx;
}
.answer{
  font-weight: bold;
  margin-bottom: 10rpx;
}
.finish{
  display: flex;
  flex-direction: column;
  justify-items: center;
  align-items: center;
}
.img{
  margin: 80rpx;
  height: 300rpx;
  width: 300rpx;
}
.fintext{
  font-weight: bold;
    font-size: x-large;
    color: cadetblue;
}
.allUnits{
  display: flex;
  font-size: 40rpx;
  margin: 20rpx;
  color: #00006C;
  flex-direction: column;
  width: -webkit-fill-available;
  align-self: center;
  font-size: 38rpx;
  font-weight: 300;
}
.oneunit{
  display: flex;
  flex-direction: row;
  align-items: center;
  /* border: 1px solid gray; */
  margin-bottom: 20px;
  border-radius: 8rpx;
  padding-right: 20px;
  box-shadow: 4rpx 6rpx 34rpx #c0c0c0;
  background: #f5f5f5;
  color: black;
}
.icon{
  height: 80rpx;
  width: 80rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  background: beige;
  padding: 10rpx;
  border-radius: 50%;
  box-shadow: 4rpx 6rpx 28rpx #c0c0c0;
}
.unitandc{
  display: flex;
  flex-direction: column;
  margin: 14rpx 0;
}
.lastchance{
  font-size: large;
  margin-left: 70rpx;
  color: green;
}
.saying{
  padding: 32rpx 20rpx 0;
  margin: 30px 0;
  line-height: 1px;
  /* border-left: 50px solid darkgrey; */
  /* border-right: 50px solid darkgrey; */
  text-align: center;
  color: dimgray;
  font-weight: 300;
  position: relative;
  border-top: 1px solid #c0c0c0;
}
.boat{
  position: absolute;
  z-index: -999;
  bottom: 10rpx;
  align-self: flex-end;
  height: 400rpx;
  width: 400rpx;
}
.water{
  position: absolute;
  z-index: -999;
  bottom: 55rpx;
  align-self: flex-start;
  height: 70rpx;
  width: 320rpx;
  left: 60rpx;
}
