.index{
  display: flex;
  flex-direction: column;
}
.index2{
  display: flex;
  flex-direction: row;
  margin-top: 100rpx;
}
.left{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-left: 100rpx;
  /* padding-left: 100rpx;
  padding-top: 200rpx; */
  color: darkslategray;
  font-size: 30rpx;
  font-weight: 300;
}
.right{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-right: 100rpx;
  margin-left: auto;
  /* padding-right: 100rpx;
  padding-top: 200rpx; */
  color: darkslategray;
  font-size: 30rpx;
  font-weight: 300;
}
.back{
  z-index: -1000;
  position: absolute;
}
.blue{
  background-color: #78c4d4;
  width: 50%;
  height: -webkit-fill-available;
  position: fixed;
}
.allblue{
  width: 100%;
  height: -webkit-fill-available;
  position: fixed;
  background-image: linear-gradient(#78c4d4, #9198e5);
}
.pink{
  background-color: #f2b4b4;
  width: 50%;
  height: -webkit-fill-available;
  position: fixed;
  right: 0;
}
text{
  margin-top: 20rpx;
  font-size: large;
}
.btn-11:before {
  position: absolute;
  content: '';
  display: inline-block;
  top: -180px;
  left: 0;
  width: 30px;
  height: 100%;
  background-color: #fff;
  animation: shiny-btn1 3s ease-in-out infinite;
}
.btn-11 {
  border: none;
  background: linear-gradient(0deg, #E6A23C  0%, #E6A23C 100%);
  color: #fff;
  overflow: hidden;
  margin-top: 200rpx;
}
@keyframes shiny-btn1 {
  0% { -webkit-transform: scale(0) rotate(45deg); opacity: 0; }
  80% { -webkit-transform: scale(0) rotate(45deg); opacity: 0.5; }
  81% { -webkit-transform: scale(4) rotate(45deg); opacity: 1; }
  100% { -webkit-transform: scale(50) rotate(45deg); opacity: 0; }
}
.avatar{
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
}
.u1{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 30rpx;
}
.userdatas{
  display: grid;
  grid-template-columns: 2fr 2fr;
  margin-top: 20rpx;
  justify-items: center;
}
.userscore{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.vstext{
  font-size: 60rpx;
  color: white;
  font-weight: bolder;
  text-align: center;
}