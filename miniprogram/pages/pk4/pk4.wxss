/* miniprogram/pages/pk/pk.wxss */
.index{
  display: flex;
  flex-direction: column;
}
.index2{
  display: flex;
  flex-direction: column;
  margin-left: auto;
  margin-right: 20rpx;
  margin-top: 10rpx;
}
.index1{
  display: flex;
  flex-direction: column;
  align-items: center;
  background: white;
  border-radius: 20rpx;
  margin-right: auto;
  margin-left: 40rpx;
  margin-top: 10rpx;
  width: 300rpx;
}
.mypoint{
  font-size: 80rpx;
  font-weight: 900;
  color: green;
}
.allblue{
  width: 100%;
  height: -webkit-fill-available;
  position: fixed;
  background-image: linear-gradient(#78c4d4, #9198e5);
}
.radiogroup{
  display: flex;
  flex-direction: column;
}
.questions{
  align-self: center;
  border-radius: 16rpx;
  padding: 20rpx;
  font-size: large;
  word-break: break-all;
  top: 260rpx;
  font-size: large;
  position: absolute;
  color: black;
  background-color: white;
  min-width: 500rpx;
  font-weight: 600;
  margin: 10rpx 30rpx;
}
.question{
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
}
.label{
  margin: 20rpx;
}
.win{
  width: 280rpx;
  height: 210rpx;
  z-index: -100;
  top: 300rpx;
  position: absolute;
}
.draw{
  z-index: 999;
  align-self: center;
  animation-name: outToIn;
  animation-duration: 0.5s;
  animation-fill-mode: forwards;
  transform: scale(0.9);
}
.back{
  z-index: -1000;
  position: absolute;
}
.blue{
  background-color: #78c4d4;
  width: 50%;
  height: -webkit-fill-available;
  position: fixed;
}
.pink{
  background-color: #f2b4b4;
  width: 50%;
  height: -webkit-fill-available;
  position: fixed;
  right: 0;
}
.chooseone{
  background: #f0f0f0;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-top: 30rpx;
}
.point{
  font-size: 50rpx;
  font-weight: 700;
  color: white;
}
@keyframes bottomTotop{
  from{
    bottom: 0;
  }
  to{
    bottom: 300rpx;
  }
}
@keyframes outToIn{
  from{
    opacity: 0;
  }
  to{
    opacity: 1;
  }
}
.floatCount{
  position: absolute;
  z-index: 999;
  font-size: 100rpx;
  font-weight: 700;
  font-family: fantasy;
  left: 0;
  font-family: emoji;
  right: 0;
  margin: 0 auto;
  color: #61B0CA;
  background: white;
  padding: 180rpx;
  border-radius: 20rpx;
  box-shadow: 4rpx 6rpx 10rpx dimgray;
  animation-name: bottomTotop;
  animation-duration: 1s;
  animation-fill-mode: forwards;
}
.cover{
  position: absolute;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.4);
  width: 100%;
  height: 100%;
  opacity: 0.6;
  z-index: 998;
}
.winner{
  z-index: 999;
  align-self: center;
  animation-name: outToIn;
  animation-duration: 0.5s;
  animation-fill-mode: forwards;
  transform: scale(0.9);
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 60rpx;
  font-weight: 900;
  color: gold;
}
.loser{
  z-index: 999;
  align-self: center;
  animation-name: outToIn;
  animation-duration: 0.5s;
  animation-fill-mode: forwards;
  transform: scale(0.9);
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 60rpx;
  font-weight: 900;
  color: darkslategray;
}
.limg{
  width: 500rpx;
  height: 500rpx;
}
.avatar{
  border-radius: 50%;
  height: 40rpx;
  width: 40rpx;
}
.onescore{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 26rpx;
  font-weight: 100;
  background: white;
  border-radius: 50rpx;
  margin: 2rpx;
}
.onescore>image,text{
  margin: 10rpx;
}
.header{
  display: flex;
}