<!--index.wxml-->
<view class="contain">
  <view class="userinfo">
    <view class="avatar">
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <view class="student">
      <text>{{name}}</text>
      <text>{{studentid}}</text>
    </view>
    <!-- <open-data type='userNickName' class="name"></open-data> -->
  </view>
  <view class="choices">
    <view class="pk" bindtap="naviToAnswer">
      <text class="text">答题</text>
    </view>
    <view bindtap="getUserProfile" class="pk">
      <text class="text">好友PK</text>
    </view>
    <view bindtap="naviToRecord" class="pk">
      <text class="text">答题记录</text>
    </view>
    <image class="robot" src="cloud://fzuanswersystem-7g3gmzjw761ecfdb.667a-fzuanswersystem-7g3gmzjw761ecfdb-1305763704/robot.png" />
  </view>
</view>
